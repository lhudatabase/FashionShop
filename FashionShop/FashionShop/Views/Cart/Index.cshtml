@model List<FashionShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
<script src="/Assets/HomePage/js/Controller/cartController.js"></script>
}
<h2>Giỏ hàng</h2>

<section id="cart_items">
    <div class="container">
        <div class="table-responsive cart_info">
            @if (Model.Count > 0)
            {
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Sản Phẩm</td>
                            <td class="description"></td>
                            <td class="price">Đơn Giá</td>
                            <td class="quantity">Số Lượng</td>
                            <td class="total">Thành Tiền</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="cart_product">
                                    <a href=""><img src="@item.Product.Image" alt=""></a>
                                </td>
                                <td class="cart_description">
                                    <h4><a href="">@item.Product.Name</a></h4>
                                    <p>Mã Sản Phẩm: @item.Product.ID</p>
                                </td>
                                <td class="cart_price">
                                    <p>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <input class="txtQuantity" type="text" name="quantity" data-id="@item.Product.ID" value="@item.Quantity" autocomplete="off" size="2">
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</p>
                                </td>
                                <td class="cart_delete">
                                    <a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <span class="alert alert-danger">Chưa Có Sản Phẩm Nào</span>
            }
        </div>
    </div>
</section>

<section id="do_action">
    <div class="container">

        <div class="row">
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <li><h4>Bạn Muốn Làm Gì Tiêp Theo ?</h4></li>
                    </ul>
                    <button id="btnContinue" class="btn btn-default update" href="">Tiếp Tục</button>
                    <button id="btnUpdate" class="btn btn-default check_out" href="">Cập Nhật</button>
                    <button id="btnDeleteAll" class="btn btn-default check_out" href="">Xóa Hết</button>
                    <button id="btnPayment" class="btn btn-default check_out" href="">Thanh Toán </button>
                </div>
            </div>
        </div>
    </div>
</section>