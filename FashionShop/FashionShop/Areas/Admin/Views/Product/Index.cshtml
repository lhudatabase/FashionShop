
@model PagedList.IPagedList<Models.Framework.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section AdminMenu
{
    <i class="icon-angle-right"></i>
    <li><a href="users-account">Products Manage</a></li>
}



<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white user"></i><span class="break"></span>Pruducts</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Name<a class="glyphicons-icon circle_plus" href="/Admin/Product/Create"></a></th>
                        <th>Code</th>
                        <th>Images </th>
                        <th>Price </th>
                        <th>Quantity</th>
                        <th>CategoryID</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.Name </td>
                            <td class="center">@item.Code</td>
                            <td class="center">
                                <img src="@item.Image" width="200" height="200">
                            </td>
                            <td class="center">@item.Price</td>
                            <td class="center">@item.Quantity</td>
                            <td class="center">@item.CategoryID</td>
                           
                            <td class="center">
                                <a href="/Admin/Product/Edit/@item.ID">Edit</a>
                                ||
                                @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Are you sure? ",
                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div><!--/span-->

</div><!--/row-->
