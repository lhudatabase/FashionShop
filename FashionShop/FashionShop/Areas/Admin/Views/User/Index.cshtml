@model PagedList.IPagedList<Models.Framework.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section AdminMenu
{
    <i class="icon-angle-right"></i>
    <li><a href="users-account">Users Account</a></li>
}


@section jsFooter{

<script src="~/Assets/Admin/js/Controller/ChangeStatus.js"></script>

}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white user"></i><span class="break"></span>Members</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
            
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    
                    <tr>
                    
                        <th>Username<a class="btn btn-success" href="/Admin/User/Create">+</a></th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Actions</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.UserName </td>
                            <td class="center">@item.Name</td>
                            <td class="center">@item.Email</td>
                            <td class="center">@item.Phone</td>
                            <td class="center">
                                <a href="#" class="btn-active btn btn-success" data-id="@item.ID">@Html.Raw(item.Status ? "<strong>Active</strong>" : "Blocked")</a>
                            </td>
                            <td class="center">
                                <a href="/Admin/User/Edit/@item.ID">Edit</a>
                                ||
                                @Ajax.ActionLink( "Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Are you sure? ",
                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                               HttpMethod = "Delete"
                           })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div><!--/span-->

</div><!--/row-->
